// https://code.visualstudio.com/docs/editor/debugging
// https://code.visualstudio.com/docs/editor/variables-reference
{

  "configurations": [{
      "label": "test:current",
      "type": "rdbg",
      "name": "Execute current spec file",
      "request": "launch",
      "script": "${file}",
      "command": "rspec",
      "bundlePath": "${env:HOME}/.rbenv/shims/bundle",
      "args": [],
      "rdbgPath": "${env:HOME}/.rbenv/shims/rdbg",
    },
    {
      "label": "run:current",
      "type": "rdbg",
      "name": "Execute current file",
      "request": "launch",
      "script": "${file}",
      "bundlePath": "${env:HOME}/.rbenv/shims/bundle",
      "rdbgPath": "${env:HOME}/.rbenv/shims/rdbg",
    }, {
      "label": "test:all",
      "type": "rdbg",
      "name": "Execute all specs",
      "request": "launch",
      "script": "spec",
      "command": "rspec",
      "bundlePath": "${env:HOME}/.rbenv/shims/bundle",
      "rdbgPath": "${env:HOME}/.rbenv/shims/rdbg",
    }
  ]
}
